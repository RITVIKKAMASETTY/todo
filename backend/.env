# Chess Backend Configuration

# App Settings
APP_NAME=Chess Backend
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=sqlite+aiosqlite:///./chess.db

# Redis (separate microservice)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Matchmaking
MATCHMAKING_TIMEOUT_SECONDS=10

# Stockfish (install via: brew install stockfish)
STOCKFISH_PATH=/opt/homebrew/bin/stockfish
STOCKFISH_DEPTH=10

# Points System
WIN_POINTS=10
DRAW_POINTS=3
LOSS_POINTS=0
